.title
  %a{href: @model.get("html_url"), target: '_blank'}
    = @model.get('name')
%ul.meta
  %li.issues
    %a{ href: @model.issuesUrl(), title: 'Issues' , target: '_blank'}
      %span.octicon.octicon-issue-opened
      %span.content 
        = @model.get('open_issues')
  %li.prs
    %a{ href: @model.pullRequestsUrl(), title: 'Pull Requests' , target: '_blank'}
      %span.octicon.octicon-git-pull-request
      %span.content 
        2 PRs
  %li.updated
    %a{ href: @model.commitsUrl(), title: 'Last Updated' , target: '_blank'}
      %span.octicon.octicon-history
      %span.content 
        %abbr.timeago{ title: @model.get("pushed_at") }
          = @model.get("pushed_at")
